			<th>번호</th>
			<th>제목</th>
			<th>작성자</th>
			<th>작성일</th>
			<th>조회수</th>
		</tr>
		<c:forEach items="${list }" var="list">
			<tr>
				<td>${list.bno }</td>
				<td><a href="/board/detail?bno=${list.bno }">${list.title }</a></td>
				<td>${list.writer }</td>
				<td>${list.reg_date }</td>
